[Unit]
Description=Run alexa skill listener

[Service]
ExecStart=/home/hello/basement-lights/run.sh
Environment="PYTHONPATH=/home/hello/basement-lights"
WorkingDirectory=/home/hello/basement-lights
StandardOutput=file:/var/log/alexa
StandardError=file:/var/log/alexa
SyslogIdentifier=alexa_listener
User=hello

[Install]
WantedBy=multi-user.target
